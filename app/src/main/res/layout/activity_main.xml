<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:layout_marginLeft="10dp"
        android:drawablePadding="10dp"
        android:text= "@string/address"/>

    <TextView
        android:id="@+id/textView_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/myline"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:hint="@string/search"
        android:paddingBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:drawablePadding="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:drawableStart="@drawable/ic_search_black_24dp"
        android:drawableLeft="@drawable/ic_search_black_24dp"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <com.google.android.material.chip.ChipGroup
        android:layout_marginLeft="5dp"
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        app:singleLine="true">

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_MaxSafety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAX Safety"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_pro"
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/icon_pro"
            android:text="Pro"/>

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_cuisines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:chipIcon="@drawable/ic_arrow_drop_down_black_24dp"
            android:text="Cuisines"/>

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_Rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 4.0+" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_fastDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fastest Delivery" />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_offers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Offers" />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_Takeaway"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Takeaway" />

        <com.google.android.material.chip.Chip
            app:chipBackgroundColor="#ffffff"
            app:chipStrokeColor="#000000"
            app:chipStrokeWidth="0.5px"
            android:id="@+id/chip_Popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="popular"/>


    </com.google.android.material.chip.ChipGroup>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="2"
        app:rowCount="2">

        <ImageView
            android:id="@+id/food_safety"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/round_shape"
            android:backgroundTint="#B3DEE0"
            android:contentDescription="TODO"
            android:src="@drawable/foodtakeoutmask"
            app:layout_columnWeight="1" />

        <ImageView
            android:id="@+id/match"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_margin="5dp"
            android:background="@drawable/round_shape"
            android:contentDescription="TODO"
            android:backgroundTint="#931414"
            android:src="@drawable/match"
            app:layout_columnWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

    <ImageView
        android:id="@+id/india"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:backgroundTint="#000000"
        android:layout_margin="5dp"
        android:background="@drawable/round_shape"
        android:contentDescription="TODO"
        android:src="@drawable/donate"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eat what makes you happy"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginLeft="10dp">

            </TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:src="@drawable/roll"
                    android:scaleType="fitXY"
                    android:id="@+id/roll"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rock and Rolls"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:text="North Indian,Chinese"
                    android:gravity="end"
                    android:layout_marginLeft="10dp"
                    android:textColor="#BA000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="95dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:text="4.2/5.0"
                    android:gravity="end"
                    android:drawableStart="@drawable/ic_star_black_24dp"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:text="â‚¹150 for one"
                    android:gravity="end"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:textColor="#BA000000"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_bookmark_border_black_24dp"
                    android:background="@drawable/round_shape">

                </ImageView>





            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation"
                style="@style/Widget.MaterialComponents.BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff"
                app:elevation="15dp"
                app:menu="@menu/bottom_navigation_menu" />


</LinearLayout>